<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="Tobia Scivoletto" />
    <title>Orari di Apertura</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/images/favicon.png" />


    <!-- includes styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" >
    <link href="/css/mystyle.css" rel="stylesheet" />
    
    <link href="/css/orari.css" rel="stylesheet" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>


<body>
    <div class="d-flex" id="wrapper">


        <!-- Page content wrapper-->
        <div id="page-content-wrapper">

            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-first-color border-bottom">
                <div class="container-fluid">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation"><span
                            class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="/account">Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/account/prenotazioni">Prenotazioni</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/account/orari">Orari di Apertura</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="logout-link" href="/auth/logout">
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>


            
            <div class="container-fluid">

                <!-- Error Component -->
                <div class="row my-section" id="message-view">
                    <p class="text-center error-message" id="error-message">
                        Errore dutante l'operazione :(
                    </p>
                    <p class="text-center success-message" id="success-message">
                        Operazione eseguita con successo!
                    </p>
                </div>
                <!-- End Error Component -->


                <!-- ORARI -->
                <div class="row my-section" id="orari" data-orari-id="<%= orari._id %>">

                    <div id="orari-div">
                        <h1 class="text-center">Orari di Apertura</h1>
                        <p class="text-center">Visualizza e Modifica gli orari di apertura della tua attivit√†</p>
                    </div>

                    <div id="enable-orari" class="my-4">
                        <% if (orari.enable) { %>
                            <button class="btn btn-primary mx-auto d-block" id="enable-orari-button">Disattiva</button>
                        <% } else { %>
                            <button class="btn btn-primary mx-auto d-block" id="enable-orari-button">Attiva</button>
                        <% } %>
                         
                    </div>

                    <%- include('../partials/orari-apertura-form') %>

                </div>

                
                
            </div>

            <div class="footer">
                <div class="container">
                    <div class="row">
                        <p>Copyright 2050</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scripts.js"></script>
    <script src="/js/message.js"></script>
    <script src="/js/orari.js"></script>

